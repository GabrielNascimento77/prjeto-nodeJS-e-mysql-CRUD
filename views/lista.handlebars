<main>
    {{!-- Exibir mensagem, se vazio --}}

    {{#if semRegistros}}
        <h1 class="produtoNaoEncontrado">Nenhum produto encontrado :(</h1>
    {{/if}}
    {{!-- Listagem de produtos --}}
    <div class="container">
        <div class="row">
            {{#each produtos}}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card">
                        <img src="../images/{{imagem}}" width="250px" height="250px">
                        <div class="textos">
                            <p>{{nome}}</p>
                            <p>R${{valor}}</p>
                        </div>
                        <a href="/formularioEditar/{{codigo}}" class="btn btn-warning">Alterar</a>
                        <a href="/remover/{{codigo}}&{{imagem}}" class="btn btn-danger">Remover</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
    
</main>